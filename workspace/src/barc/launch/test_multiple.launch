<launch>

    <!-- SYSTEM MODEL -->
    <!-- vehicle parameters -->
    <param name="L_a" type="double" value="0.125" />
    <param name="L_b" type="double" value="0.125" />
    <param name="m" type="double" value="1.98" />
    <param name="I_z" type="double" value="0.24" />
    <param name="dt" type="double" value="0.1" />
    <param name="num_agents" type="int" value="2" />

    <!-- MACHINES -->
    <machine name="yoga" address="192.168.10.74" user="lukas" timeout="20.0" env-loader="/home/lukas/barc/env_loader_yoga.sh" />
    <!-- <machine name="yoga" address="192.168.10.74" user="lukas" timeout="20.0" env-loader="/home/lukas/barc/env_loader_yoga.sh" /> -->
    <machine name="ubuntu-pc" address="127.0.0.1" user="mpcubuntu" timeout="20.0" env-loader="/home/mpcubuntu/barc/env_loader_pc_vis.sh"/>

    <!-- AGENT 1 NODES-->
    <!-- AGENT-NODE 1-->
    <node machine="ubuntu-pc" pkg="barc" type="agent_node.jl" name="agent_1" output="screen">
        <param name="index" type="int" value="1" />
        <param name="color" type="str" value="red" />
        <param name="mass" type="double" value="1.98" />
        <param name="time_offset" type="double" value="0.0" />
        <param name="delay_a" type="int" value="1" />
        <param name="delay_df" type="int" value="1" />
        <param name="sim" type="str" value="simulation" />

        <remap from="pos_info" to="agent_1/pos_info" />
        <remap from="real_val" to="agent_1/real_val" />
        <remap from="ecu" to="agent_1/ecu" />
        <remap from="xy_prediction" to="agent_1/xy_prediction" />
        <remap from="selected_states" to="agent_1/selected_states" />
        <remap from="prediction" to="agent_1/prediction" />
        <remap from="adv_prediction" to="agent_2/prediction_for_adv" />
        <remap from="prediction_for_adv" to="agent_1/prediction_for_adv" />
        <remap from="ecu_pwm" to="agent_1/ecu_pwm" />
    </node>

    <!-- SIMULATOR -->
    <node machine="ubuntu-pc" pkg="barc" type="barc_simulator_dyn_lukas.jl" name="barc_sim_1" output="screen">
        <remap from="hedge_imu_fusion" to="agent_1/hedge_imu_fusion" />
        <remap from="imu/data" to="agent_1/imu/data" />
        <remap from="vel_est" to="agent_1/vel_est" />
        <remap from="real_val" to="agent_1/real_val" />
        <remap from="ecu" to="agent_1/ecu" />
    </node>   
    <!-- AGENT 1 NODES-->

    <!-- AGENT 2 NODES-->
    <!-- AGENT-NODE 2-->
    <node machine="ubuntu-pc" pkg="barc" type="agent_node.jl" name="agent_2" output="screen">
        <param name="index" type="int" value="2" />
        <param name="color" type="str" value="blue" />
        <param name="mass" type="double" value="1.98" />
        <param name="time_offset" type="double" value="7.5" />
        <param name="delay_a" type="int" value="1" />
        <param name="delay_df" type="int" value="1" />
        <param name="sim" type="str" value="simulation" />

        <remap from="pos_info" to="agent_2/pos_info" />
        <remap from="real_val" to="agent_2/real_val" />
        <remap from="ecu" to="agent_2/ecu" />
        <remap from="xy_prediction" to="agent_2/xy_prediction" />
        <remap from="selected_states" to="agent_2/selected_states" />
        <remap from="prediction" to="agent_2/prediction" />
        <remap from="adv_prediction" to="agent_1/prediction_for_adv" />
        <remap from="prediction_for_adv" to="agent_2/prediction_for_adv" />
        <remap from="ecu_pwm" to="agent_2/ecu_pwm" />
    </node>

    <!-- SIMULATOR -->
    <node machine="ubuntu-pc" pkg="barc" type="barc_simulator_dyn_lukas.jl" name="barc_sim_2" output="screen">
        <remap from="hedge_imu_fusion" to="agent_2/hedge_imu_fusion" />
        <remap from="imu/data" to="agent_2/imu/data" />
        <remap from="vel_est" to="agent_2/vel_est" />
        <remap from="real_val" to="agent_2/real_val" />
        <remap from="ecu" to="agent_2/ecu" />
    </node>   
    <!-- AGENT 2 NODES-->

    <!-- VISUALIZATION -->
    <node machine="ubuntu-pc" pkg="barc" type="plotter.py" name="visualization" output="screen">
        <param name="num_agents" type="int" value="2" />
        <param name="agent_1" type="str" value="simulation" />
        <param name="agent_2" type="str" value="simulation" />
    </node>

    <!-- VISUALIZATION -->
    <!-- <node machine="ubuntu-pc" pkg="barc" type="plotter.py" name="visualization" output="screen"> -->
    <!--    <param name="num_agents" type="int" value="2" /> -->
    <!-- </node> -->

</launch>
