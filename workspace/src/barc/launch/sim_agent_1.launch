<launch>

    <!-- SYSTEM MODEL -->
    <!-- vehicle parameters -->
    <param name="L_a" type="double" value="0.125" />
    <param name="L_b" type="double" value="0.125" />
    <param name="m" type="double" value="1.98" />
    <param name="I_z" type="double" value="0.24" />
    <param name="dt" type="double" value="0.1" />
    <param name="num_agents" type="int" value="1" />

    <!-- AGENT 1 NODES-->
    <!-- AGENT-NODE 1-->
    <node pkg="barc" type="agent_node.jl" name="agent_1" output="screen">
        <param name="index" type="int" value="1" />
        <param name="color" type="str" value="red" />
        <param name="mass" type="double" value="1.98" />
        <param name="time_offset" type="double" value="0.0" />
        <param name="delay_a" type="int" value="1" />
        <param name="delay_df" type="int" value="1" />
        <param name="sim" type="str" value="simulation" />

        <remap from="pos_info" to="agent_1/pos_info" />
        <remap from="real_val" to="agent_1/real_val" />
        <remap from="ecu" to="agent_1/ecu" />
        <remap from="xy_prediction" to="agent_1/xy_prediction" />
        <remap from="selected_states" to="agent_1/selected_states" />
        <remap from="prediction" to="agent_1/prediction" />
        <remap from="adv_prediction" to="agent_1/prediction_for_adv" />
        <remap from="prediction_for_adv" to="agent_1/prediction_for_adv" />
        <remap from="ecu_pwm" to="agent_1/ecu_pwm" />
    </node>

    <!-- Estimator -->
    <node pkg="barc" type="estimator_ugo.py" name="state_estimator_1" output="screen">
        <!-- delay in state estuiamtor -->
        <param name="delay_df" type="double" value="0.0" />
        <param name="delay_a" type="double" value="0.0" />
        <!-- ekf properties -->
        <param name="Q_x" type="double" value="0.01" />
        <param name="Q_y" type="double" value="0.01" />
        <param name="Q_vx" type="double" value="0.01" />
        <param name="Q_vy" type="double" value="0.01" />
        <param name="Q_ax" type="double" value="0.03" />
        <param name="Q_ay" type="double" value="0.05" />
        <param name="Q_psi" type="double" value="0.01" />
        <param name="Q_psiDot" type="double" value="0.01" />
        <param name="R_x" type="double" value="1.0" />
        <param name="R_y" type="double" value="1.0" />
        <param name="R_vx" type="double" value="1.0" />
        <param name="R_vy" type="double" value="10.0" />
        <param name="R_ax" type="double" value="2.0" />
        <param name="R_ay" type="double" value="8.0" />
        <param name="R_psiDot" type="double" value="0.5" />

        <remap from="hedge_pos" to="agent_1/hedge_pos" />
        <remap from="imu/data" to="agent_1/imu/data" />
        <remap from="vel_est" to="agent_1/vel_est" />
        <remap from="pos_info" to="agent_1/pos_info" />
        <remap from="ecu" to="agent_1/ecu" />
        <!--<remap from="hedge_pos_ang" to="agent_1/hedge_pos_ang" /> -->
        <!--<remap from="hedge_imu_fusion_1" to="agent_1/hedge_imu_fusion_1" /> -->
        <!--<remap from="hedge_imu_fusion_2" to="agent_1/hedge_imu_fusion_2" />-->
        <remap from="hedge_imu_fusion" to="agent_1/hedge_imu_fusion" />
        <!-- ukf properties -->
    </node>

    <!-- SIMULATOR -->
    <node pkg="barc" type="barc_simulator_dyn_lukas.jl" name="barc_sim_1" output="screen">
        <remap from="hedge_imu_fusion" to="agent_1/hedge_imu_fusion" />
        <remap from="imu/data" to="agent_1/imu/data" />
        <remap from="vel_est" to="agent_1/vel_est" />
        <remap from="real_val" to="agent_1/real_val" />
        <remap from="ecu" to="agent_1/ecu" />
    </node>   
    <!-- AGENT 1 NODES-->

    <!-- VISUALIZATION -->
    <node pkg="barc" type="plotter.py" name="visualization" output="screen">
        <param name="num_agents" type="int" value="1" />
        <param name="index" type="int" value="1" />
        <param name="agent_1" type="str" value="simulation" />
    </node>  

</launch>
